# ==============================
# ALPHA SECURITY SERVER - PRODUCTION CONFIG
# ==============================

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (SQLite for now, can be upgraded to PostgreSQL)
DATABASE_PATH=./data/alpha-security.db

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-immediately
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys and Secrets
API_SECRET_KEY=your-api-secret-key-change-this-immediately
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/alpha-server.log

# Security Headers
TRUST_PROXY=true

# File Upload Limits
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_TIMEOUT=60000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7